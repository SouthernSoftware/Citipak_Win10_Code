SUB BalanceListing
CLS
  
  
  OpenTaxPersFile NumOfPersRecs, PersTaxFile

   GOSUB init1

   OPEN "PPTRA.TXT" FOR INPUT AS #11
a1: INPUT #11, A$
   INPUT #11, b$
    A$ = RTRIM$(A$)
    LOCATE 5, 1: PRINT A$, p
   FOR Cnt& = 1 TO NumOfPersRecs
   
   GET PersTaxFile, Cnt&, PersRec(1)
   IF RTRIM$(PersRec(1).Desc1) = A$ THEN
    j$ = PersRec(1).Desc5
    j$ = "Y" + RIGHT$(j$, 29)
    PersRec(1).Desc5 = j$
    PUT PersTaxFile, Cnt&, PersRec(1)

   p = p + 1
   GOTO a2
   END IF

   NEXT Cnt&

a2:
   GOTO a1
   END
init1:
   FOR Cnt& = 1 TO NumOfPersRecs
   GET PersTaxFile, Cnt&, PersRec(1)
    j$ = PersRec(1).Desc5
    j$ = "N" + RIGHT$(j$, 29)
    PersRec(1).Desc5 = j$
   PUT PersTaxFile, Cnt&, PersRec(1)
   NEXT Cnt&
   RETURN





END SUB

SUB OpenTaxCustFile (NumOfTaxRecs, TaxFile)
  
  TaxFile = FREEFILE
  OPEN "PPTXCUST.DAT" FOR RANDOM ACCESS READ WRITE SHARED AS #TaxFile LEN = LEN(TaxCustRec(1))
  NumOfTaxRecs = LOF(TaxFile) / LEN(TaxCustRec(1))
  
END SUB


SUB BalanceListing
CLS
  OpenTaxCustFile NumOfTaxRecs, TaxFile
  OpenTaxPersFile NumOfPersRecs, PersTaxFile

  TaxFile1 = FREEFILE
  OPEN "RETXCUST.DA1" FOR RANDOM ACCESS READ WRITE SHARED AS #TaxFile1 LEN = LEN(TaxCustRec1(1))
  
  FOR Cnt& = 1 TO NumOfTaxRecs
   GET TaxFile, Cnt&, TaxCustRec(1)
   GET TaxFile, Cnt&, TaxCustRec1(1)
   IF NOT TaxCustRec(1).Deleted THEN
    N& = LOF(TaxFile1) / LEN(TaxCustRec1(1))
    N& = N& + 1
    PUT TaxFile1, N&, TaxCustRec1(1)
   END IF
   NEXT Cnt&
   CLOSE
   END
END SUB

SUB OpenTaxCustFile (NumOfTaxRecs, TaxFile)
  
  TaxFile = FREEFILE
  OPEN "PPTXCUST.DAT" FOR RANDOM ACCESS READ WRITE SHARED AS #TaxFile LEN = LEN(TaxCustRec(1))
  NumOfTaxRecs = LOF(TaxFile) / LEN(TaxCustRec(1))
  
END SUB


Private Sub Setcycle()
  Dim UBCustRecLen As Integer, Whatcycle As Integer
  Dim UBFile As Integer, IdxRecLen As Integer, CustBook As Integer
  Dim NumOfRecs As Long, IdxFileSize As Long, ThisCust As Long
  Dim CCnt As Long, ReSeq As Long, IdxNumOfRecs As Long
  Dim CustLen As Integer, Handle As Integer
  Dim cnt As Long, RCnt As Integer
  Dim FromBook As Integer, ThruBook As Integer
  FromBook = Val(fptxtRoute1)
  'If FromBook = 0 Then FromBook = 1
  ThruBook = Val(fptxtRoute2)
  If Val(fptxtCycle.Text) > 0 Then
  Else
    MsgBox "Invalid Cycle Number.", vbOKOnly, "Invalid Entry"
    Exit Sub
  End If
  Whatcycle = Val(fptxtCycle.Text)
  DeActivateControls frmSetCycle
  FrmShowPctComp.Label1 = "Assign Cycle Numbers..."
  FrmShowPctComp.Show , Me
  UBLog "SetCycle - " & ", book(" & fptxtRoute1 & "-" & fptxtRoute2 & "),Cycle-" & fptxtCycle.Text
  ReDim UBCustRec(1) As NewUBCustRecType
  UBCustRecLen = Len(UBCustRec(1))
  IdxRecLen = 4 'we are using a long integer
  IdxFileSize& = FileSize&("UBCUSTBK.IDX")
  IdxNumOfRecs = IdxFileSize& \ IdxRecLen
  ReDim IdxBuff(1 To IdxNumOfRecs) As UBCustIndexRecType

    NumOfRecs = IdxNumOfRecs
    Handle = FreeFile
    Open "UBCUSTBK.IDX" For Random Shared As Handle Len = IdxRecLen
    For cnt& = 1 To IdxNumOfRecs
      Get #Handle, cnt&, IdxBuff(cnt&)
    Next
    Close Handle

  UBFile = FreeFile
  Open "UBCUST.dat" For Random Shared As UBFile Len = UBCustRecLen
  NumOfRecs& = LOF(UBFile) \ UBCustRecLen
  For cnt& = 1 To IdxNumOfRecs&
    FrmShowPctComp.ShowPctComp cnt&, IdxNumOfRecs&
    If FrmShowPctComp.Out = True Then
      Close
      FrmShowPctComp.Out = False
      Exit Sub
    End If
    ThisCust& = IdxBuff(cnt&).RecNum
    Get UBFile, ThisCust&, UBCustRec(1)
    CustBook = Val(UBCustRec(1).Book)
    If CustBook >= FromBook And CustBook <= ThruBook Then
      If Not UBCustRec(1).DelFlag Then
        UBCustRec(1).BILLCYCL = Whatcycle
        Put UBFile, ThisCust&, UBCustRec(1)
      End If
    End If
  Next
  Close

  Erase UBCustRec, IdxBuff
UBLog "setcycle:" & Str$(Whatcycle) & " Using Util set cycle"
MsgBox "Set Cycle:" & Str$(Whatcycle), vbOKOnly, " Cycle"
'ReIndexSystem False
ActivateControls frmSetCycle
End Sub

